<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Api TestSuite" parallel="methods" thread-count="3">
  <listeners>
    <listener class-name="allure.AllureSuccessAndFailureTestListener"/>
  </listeners>

  <test name="Auth Tests">
    <classes>
      <class name="tests.auth.LoginTest"/>
    </classes>
  </test>

  <test name="Product Tests">
    <classes>
      <class name="tests.products.FindProductTest"/>
      <class name="tests.products.CreateProductTest"/>
      <class name="tests.products.PatchProductTest"/>
    </classes>
  </test>
</suite>
