<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="BankAppSuite" parallel="tests" thread-count="3">
  <listeners>
    <listener class-name="com.allure.listeners.AllureSuccessAndFailureTestListener"/>
  </listeners>

  <test name="Browser Tests">
    <parameter name="browser" value="${browser}"/>
    <classes>
      <class name="tests.login.CustomerLoginTest"/>
      <class name="tests.customer.TransactionHistoryTest"/>
      <class name="tests.customer.DepositFundsTest"/>
      <class name="tests.customer.WithdrawFundsTest"/>
      <class name="tests.bank_manager.AddCustomerTest"/>
      <class name="tests.bank_manager.AccountTest"/>
    </classes>
  </test>
</suite>
