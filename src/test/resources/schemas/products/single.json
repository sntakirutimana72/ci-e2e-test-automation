{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Schema",
  "type": "object",
  "required": [
    "id",
    "title",
    "price",
    "description",
    "category",
    "image"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "title": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "image": {
      "type": "string",
      "pattern": "^https://fakestoreapi\\.com/img/.*\\.(jpg|jpeg|png)$"
    },
    "rating": {
      "type": "object",
      "required": [
        "rate",
        "count"
      ],
      "properties": {
        "rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        },
        "count": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
